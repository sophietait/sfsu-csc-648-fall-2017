<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <link rel = "stylesheet" href="../../bootstrap/css/bootstrap.min.css" type = "text/css"> </link>
        <link rel="stylesheet" href="../../stylesheets/main.css" type = "text/css">
		<link href="https://fonts.googleapis.com/css?family=Cabin+Sketch" rel="stylesheet">
		<script src = "../../bootstrap/js/jquery.min.js"></script>
		<script src = "../../bootstrap/js/bootstrap.min.js"></script>

    </head>
    <body>
		<%- include ../partials/disclaimer.ejs %>
		<%- include ../partials/navbar.ejs %>

		<!-- form -->
        <div class="container text-center">
            <div class="row">
                <div class="col-sm-12">
					<form action="../editListing/<%= listingData.listing_id %>" method="post" enctype="multipart/form-data" >
                        <div class="form-group">
                            <label for="address">Address:</label>
							<input type="text" class="form-control input-sm" id="listing-address" value="<%= listingData.address %>" name="address" required>
                        </div>
                        <div class="form-group">
                            <label for="state">State:</label>
							<input type="text" class="form-control" id="listing-state" value="<%= listingData.state %>" name="state" required>
                        </div>
                        <div class="form-group">
                            <label for="city">City:</label>
							<input type="text" class="form-control" id="listing-city" value="<%= listingData.city %>" name="city" required>
                        </div>
                        <div class="form-group">
                            <label for="zipcode">Zipcode:</label>
							<input type="text" class="form-control" id="listing-zipcode" value="<%= listingData.zipcode %>" name="zipcode" required>
                        </div>
                        <div class="form-group">
                            <label for="price">Price:</label>
							<input type="text" class="form-control" id="listing-price" value="<%= listingData.price %>" name="price" required>
                        </div>
                        <div class="form-group">
                            <label for="bedroom-count">Number of Bedrooms:</label>
							<input type="text" class="form-control" id="listing-bedroom-count" value="<%= listingData.bedroom_count %>" name="bedroom" required>
                        </div>
                        <div class="form-group">
                            <label for="bathroom-count">Number of Bathrooms:</label>
							<input type="text" class="form-control" id="listing-bathroom-count" value="<%= listingData.bathroom_count %>" name="bathroom" required>
                        </div>
                        <div class="form-group">
                            <label for="pool">Pool:</label>
							<input type="text" class="form-control" id="listing-pool" value="<%= listingData.pool %>" name="pool" required>
                        </div>
                        <div class="form-group">
                            <label for="ac">AC:</label>
							<input type="text" class="form-control" id="listing-ac" value="<%= listingData.ac %>" name="ac" required>
                        </div>
                        <div class="form-group">
                            <label for="heater">Heater:</label>
							<input type="text" class="form-control" id="listing-heater" value="<%= listingData.heater %>" name="heater" required>
                        </div>
                        <div class="form-group">
                            <label for="floor-size">Floor Size:</label>
							<input type="text" class="form-control" id="listing-floor-size" value="<%= listingData.floor_size %>" name="floor" required>
                        </div>
                        <div class="form-group">
                            <label for="parking">Parking:</label>
							<input type="text" class="form-control" id="listing-parking" value="<%= listingData.parking %>" name="parking" required>
                        </div>
                        <button type="submit" class="btn btn-default">Submit</button>
                    </form>	
                </div>
            </div>
        </div>
		<!-- end form -->

		<%- include ../partials/footer.ejs %>
    </body>
</html>
